<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <div align="center"><h1>클릭 카운터</h1></div>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
      }

      #counter {
        display: grid;
        place-items: center;
        height: 100vh;
      }

      #click-button {
        padding: 12px 24px;
        font-size: 1.5rem;
        border-radius: 8px;
        background-color: #008080;
        color: white;
        border: none;
        cursor: pointer;
        width: 200px; /* 추가 */
        height: 80px; /* 추가 */
      }

      #click-button:hover {
        background-color: #005959;
      }

      #history {
        background-color: #f0f0f0;
        padding: 24px;
        height: 100vh;
      }

      #history-list {
        list-style: none;
        margin: 0;
        padding: 0;
      }

      #history-list li {
        border-bottom: 1px solid #c0c0c0;
        transition: background-color 0.2s ease-in-out;
      }

      #history-list li:hover {
        background-color: #e0e0e0;
      }
    </style>
  </head>
  <body>
    <div id="counter">
      <h1><div align="center"><img src="images/monster1.jpeg" width="30%"></div></h1>
      <p>Number of clicks: <span id="count">0</span></p>
      <button id="click-button">저 눌러주세요 !!</button>
    </div>

    <div id="history">
      <h2>Click History</h2>
      <ul id="history-list"></ul>
    </div>
    <script>
      const countSpan = document.getElementById('count');
      const clickButton = document.getElementById('click-button');
      const historyList = document.getElementById('history-list');

      let count = 0;

      clickButton.addEventListener('click', () => {
        count++;
        countSpan.textContent = count;

        const historyItem = document.createElement('li');
        historyItem.textContent = `Clicked at ${new Date().toLocaleString()}`;
        historyList.appendChild(historyItem);
      });
    </script>
  </body>
</html>
